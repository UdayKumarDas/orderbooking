<html>
	<head></head>
<h2>Menu List</h2>
<%= link_to("Add New Menu",{:controller=>'menus',:action=>'new'})%>
<style> 
table { width: 640px; } /* Make table wider */
td, th { border: 1px solid #CCC; } /* Add borders to cells */
table { 
 color: #333;
 font-family: Helvetica, Arial, sans-serif;
 width: 640px; 
 border-collapse: 
 collapse; border-spacing: 0; 
}
 
td, th { 
 border: 1px solid transparent; /* No more visible border */
 height: 30px; 
 transition: all 0.3s;  /* Simple transition for hover effect */
}
 
th {
 background: #DFDFDF;  /* Darken header a bit */
 font-weight: bold;
}
 
td {
 background: #FAFAFA;
 text-align: center;
}

/* Cells in even rows (2,4,6...) are one color */ 
tr:nth-child(even) td { background: #F1F1F1; }   

/* Cells in odd rows (1,3,5...) are another (excludes header cells)  */ 
tr:nth-child(odd) td { background: #FEFEFE; }  
 
tr td:hover { background: #666; color: #FFF; } /* Hover cell effect! */
	</style>


<body>
	<%if !flash[:notice].blank?%>
<div>
	<%= flash[:notice]%>
</div>
<%end%>
<div>


<table summary="Menu list">

	<tr>
		
	<th>Menu Item Name</th>
	<th>Item Type</th>
	<th>Price</th>
		<th>Actions</th>
	</tr>
	<%@menus.each do |menu|%>
	<tr>
		<td><%= menu.menu_item_name%></td>
		<td><%= menu.item_type%></td>
		<td><%= image_tag('1407951522_Indian_Rupee_symbol.png',:size=>'10x10',:alt=>'Logo')%>&nbsp;<%= menu.price%></td>
		<td>
		<%= link_to("Show",{:action=>'show',:id=>menu.id})%>
		<%= link_to("Edit",{:action=>'edit',:id=>menu.id})%>
		<%= link_to("Destroy",{:action=>'destroy',:id=>menu.id})%>
		</td>
	</tr>
	<%end%>
</table>
</body>
</html>

