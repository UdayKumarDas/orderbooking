
<div class="divRight">
	<p id="notice">
		<%= notice %>
	</p>
	<h2>Your Order</h2>
	<ul>		
		<% for item in @cart.line_items %>
		&nbsp;&nbsp;
		<li>
			<%= item.quantity %> &times;<%= item.menu.menu_item_name %>&nbsp;&nbsp;
			<%= image_tag('1407951522_Indian_Rupee_symbol.png',:size=>'10x10',:alt=>'Logo')%>
			<b style="color: #380B61;font-size: 15px"><%= item.quantity*item.menu.price%> </b>
		</li>

		<% end %>	
		<%= render(@cart.line_items) %>	
	</ul>
	<br />
	<b style="color: #380B61;font-size: 15px">Total Price----------------</b><%= image_tag('1407951522_Indian_Rupee_symbol.png',:size=>'10x10',:alt=>'Logo')%><b style="color: #380B61;font-size: 15px"><%= @cart.total_price %></b>
	<br /><br />
	<%= button_to 'Empty cart', @cart, :method => :delete %>
	<br />
	
</div>

