<html>
	<head>
		<link id="bs-css" href="public/stylesheets/bootstrap-cerulean.min.css" rel="stylesheet">

		<link href="public/stylesheets/charisma-app.css" rel="stylesheet">
	</head>

	<style>
		table {
			width: 640px;
		}/* Make table wider */
		td, th {
			border: 1px solid #CCC;
		}/* Add borders to cells */
		table {
			color: #333;
			font-family: Helvetica, Arial, sans-serif;
			width: 640px;
			border-collapse: collapse;
			border-spacing: 0;
		}

		td, th {
			border: 1px solid transparent; /* No more visible border */
			height: 30px;
			transition: all 0.3s; /* Simple transition for hover effect */
		}

		th {
			background: #DFDFDF; /* Darken header a bit */
			font-weight: bold;
		}

		td {
			background: #FAFAFA;
			text-align: center;
		}

		/* Cells in even rows (2,4,6...) are one color */
		tr:nth-child(even) td {
			background: #F1F1F1;
		}

		/* Cells in odd rows (1,3,5...) are another (excludes header cells)  */
		tr:nth-child(odd) td {
			background: #FEFEFE;
		}

		tr td:hover {
			background: #666;
			color: #FFF;
		}/* Hover cell effect! */

		a.btn-orange {
			text-decoration: none;
			background-color: #81c02f;
			color: #fff;
			display: inline-block;
			font-size: 0.9em;
			font-weight: 700;
			line-height: normal;
			margin: 1% 0;
			padding: 0.5em 1em;
			text-transform: uppercase;
			margin-right: 60px;
		}

		a.btn-orange:hover {
			background-color: #81c02f;
			color: #000;
		}
		a.btn-orange1 {
			text-decoration: none;
			background-color: gray;
			color: #fff;
			display: inline-block;
			font-size: 0.9em;
			font-weight: 700;
			line-height: normal;
			margin: 1% 0;
			padding: 0.5em 1em;
			text-transform: uppercase;
			margin-right: 60px;
		}

		a.btn-orange1:hover {
			background-color: #81c02f;
			color: #000;
		}
		a.btn-orange2 {
			text-decoration: none;
			background-color: blue;
			color: #fff;
			display: inline-block;
			font-size: 0.9em;
			font-weight: 700;
			line-height: normal;
			margin: 1% 0;
			padding: 0.5em 1em;
			text-transform: uppercase;
			margin-right: 60px;
		}

		a.btn-orange2:hover {
			background-color: #81c02f;
			color: #000;
		}
		.header-box {
			padding-bottom: 400px;
			background: none repeat scroll 0 0 #fff;
			border: 1px solid #ddd;
			padding: 1em;
			width: 100%;
		}
		.txtName
		{
			box-shadow: 0 0 15px 5px #b0e0ee;
			border: 2px solid #bebede;
		}
	</style>

	<body style="background-color: #F7F7F7;">
<div class="grid_16 header-box desktop">
				<%= image_tag @hotel.hotelImage_url,:size=>'160x120'%>&nbsp;&nbsp;
				<b style="color: #f9b004;text-align: center;font-size: 20px;position: absolute;"><%= @hotel.hotel_Name%></b>
				<b style="color: #380B61;font-size: 15px;position: absolute;padding-top: 30px;"><%= image_tag('1407945135_gpsmapicons07.png',:size=>'20x20',:alt=>'Logo')%>&nbsp;<%= @hotel.hotel_location%></b>
				<b style="width: 20%;float: right; "><%= link_to 'Edit Hotel' ,{:controller=>'hotels',:action=>'edit'},class: "btn-orange1"%></b>
			</div>
			</br>
				<% if flash[:notice] %>
				<div style="color:green;text-align: center;" >
					<%= flash[:notice] %>
				</div>
				
				<% end %>
		
<%= form_for(:category,:url=>{:controller=>'categories',:action=>'create'}) do |f|%>			
		
		<div >	<b style="color: #808080;">Name:&nbsp;</b><%= f.text_field :name, :size => "30x10",:required=>true%>&nbsp;<%= submit_tag("Create New Category")%></div>
		
	
		<%end%>

		

			<h3 style="color: #F4A506">Available Categories </h3>
			
			<table>
				<thead>
					<tr>
						<th style="text-align: center;color: #808080;"> Category Name</th>
	<th style="text-align: center;;color: #808080;"> Action</th>
						
					</tr>
				</thead>
			

				<tbody>
					<% @categories.each do |category| %>
					<tr>
						<td style="text-align: center;;color: #808080;"> <%= category.name %></td>
						
						<td style="text-align: center;"><%= link_to 'Edit',{:action=>'edit',:id=>category.id },class: "btn-orange1"%>
							<%= link_to 'Delete',{:action=>'destroy',:id=>category.id},class: "btn-orange1" %></td>
						
					</tr>
					<% end %>

				</tbody>
			</table>
	
		<br>
		

	</body>
</html>
<br>

