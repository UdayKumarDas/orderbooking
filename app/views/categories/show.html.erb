<body style="background-color: #F7F7F7;">
	<div class="grid_16 header-box desktop">
				<%= image_tag @hotel.hotelImage_url,:size=>'160x120'%>&nbsp;&nbsp;
				<b style="color: #f9b004;text-align: center;font-size: 20px;position: absolute;"><%= @hotel.hotel_Name%></b>
				<b style="color: #380B61;font-size: 15px;position: absolute;padding-top: 30px;"><%= image_tag('1407945135_gpsmapicons07.png',:size=>'20x20',:alt=>'Logo')%>&nbsp;<%= @hotel.hotel_location%></b>
				<b style="width: 20%;float: right; "><%= link_to 'Edit Hotel' ,{:controller=>'hotels',:action=>'edit'},class: "btn-orange1"%></b>
			</div>
</br>	
<br />


<%= form_for(:menu,:url=>{:action=>'create'},:html=>{:multipart=>true}) do |f|%>	
	<b>Category:</b>	<%= select_tag "Categories", options_from_collection_for_select(@categories, "id", "name"), prompt: "Select Category"%>
		<b>Name:</b>&nbsp;	<%= f.text_field(:menu_item_name)%>
		
		<b>Price:</b>&nbsp;&nbsp;<%= f.number_field :price %>
		<br /><br />
		<b>Item Type:</b>&nbsp;	<%= f.text_field(:item_type)%>&nbsp;
		<b>Image:</b>
			<div style="width: 30%;position: absolute;margin-left: 26%;margin-top: -3%;"><%= f.file_field :image %></div>
	
		
<br />
	<div style="width: 15%;position: absolute;margin-left: 42%;margin-top: -3%;"><%= submit_tag("Create New Menu",:id=> "some_id",:name=>params[:name])%></div>
	<%end%>


<%= link_to("<< back",{:action=>'index'},class: "btn-orange")%>
<% debug @menus %>
<table >
<h3 style="color: ;">Available Menus</h3>
	<br />
	<tr>
		
	<th>Menu Item Name</th>
	<th>Item Type</th>
	<th >Price</th>
	<th >Menu Item Image</th>
		<th >Actions</th>
	</tr>
	<%@menus.each do |menu|%>
	<tr>
		<td><%= menu.menu_item_name%></td>
		<td><%= menu.item_type%></td>
		<td><%= image_tag('1407951522_Indian_Rupee_symbol.png',:size=>'10x10',:alt=>'Logo')%>&nbsp;<%= menu.price%></td>
		<td><%= image_tag menu.image_url,:size=>'70x70'%></td>
		<td style="width: 40%" >		
		<%= link_to("Edit",{:controller=>'menus',:action=>'edit',:id=>menu.id},class: "btn-orange1")%>
		<%= link_to("Delete",{:controller=>'hotels',:action=>'destroy',:id=>menu.id},class: "btn-orange1")%>
		</td>
	</tr>
	<%end%>
</table>


<%= link_to("Add New Menu",{:controller=>'menus',:action=>'new'},class: "btn-orange")%>

