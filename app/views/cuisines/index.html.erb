<html>
	<head>
		<%= stylesheet_link_tag 'style'%>
		
	</head>
	<style>.header-box {
			padding-bottom: 400px;
			background: none repeat scroll 0 0 #fff;
			border: 1px solid #ddd;
			padding: 1em;
			width: 100%;
		}
		.txtName {
			box-shadow: 0 0 15px 5px #b0e0ee;
			border: 2px solid #bebede;
		}</style>
	<body>
		<div class="grid_16 header-box desktop">
							<%= image_tag @hotel.hotelImage_url,:size=>'140x60'%>&nbsp;&nbsp;
							<b style="color: #f9b004;text-align: center;font-size: 20px;position: absolute;"><%= @hotel.hotel_Name%></b>
							<b style="color: #380B61;font-size: 15px;position: absolute;padding-top: 30px;"><%= image_tag('1407945135_gpsmapicons07.png',:size=>'20x20',:alt=>'Logo')%>&nbsp;<%= @hotel.hotel_location%></b>
							<b style="width: 20%;float: right; "><%= link_to 'Edit Hotel' ,{:controller=>'hotels',:action=>'edit'},class: "btn-orange1"%></b>
							</div>
<% if flash[:notice] %>
		<div style="color:green;text-align: center;" >
			<%= flash[:notice] %>
		</div>
		<%end%>
		<h4>Create new cuisine</h4>

		<%= form_for(:cuisine,:url=>{:controller=>'cuisines',:action=>'create'}) do |f| %>

		<div class="field">
			<%if params[:cuisineid1].blank?%>
			<%= f.label :cuisine_name %>:
			<%= f.text_field :cuisine_name %>&nbsp;  <%= f.submit 'SAVE' %>
		</div>
		<%end%><%end%>

		<% if params[:cuisineid1].present?%>
		<div class="field">

			<%= form_for(:cuisine,:url=>{:controller=>'cuisines',:action=>'update',:cuisineid1=>params[:cuisineid1]}) do |cuisine|%>
			<%= cuisine.label :cuisine_name%>
			<%= cuisine.text_field :cuisine_name%>
			<%= cuisine.submit 'UPDATE' %>
			<%end%>
			<%end%>
		</div>
		<br />
		<h3 style="color: #F4A506">Available cuisines </h3>
		<table>
			<tr>
				<th style="text-align: center;color: #808080;"> Cuisine Name</th>
				<th style="text-align: center;color: #808080;"> &nbsp;Action</th>
			</tr>

			<% @cuisines.each do |cuisine|%>
			<tr>
				<td style="text-align: center;;color: #808080;"><%= cuisine.cuisine_name%></td>
				<td style="text-align: center;"><%= link_to 'Edit',{:action=>'index',:cuisineid1=>cuisine.id },class: "btn-orange1"%>
				<%= link_to 'Delete',{:action=>'destroy',:cuisineid=>cuisine.id},class: "btn-orange1" %></td>
			</tr>
			<%end%>
		</table>

	</body>

</html>
