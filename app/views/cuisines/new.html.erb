<html>
	<head>
		<%= stylesheet_link_tag 'content'%>
	</head>
	<body>

		<h4>Create new cuisine</h4>

		<%= form_for(:cuisine,:url=>{:controller=>'cuisines',:action=>'create'}) do |f| %>
		

		<div class="field">
			<%if params[:id].blank?%>
			<%= f.label :cuisine_name %>:
			<%= f.text_field :cuisine_name %>&nbsp;  <%= f.submit %>
		</div>
		<%end%>
		
		<% if params[:id].present?%>
		<div class="field">

			<%= form_for(@edit_cuisine,:url=>{:action=>'update'}) do |cuisine|%>
			<%= cuisine.label :cuisine_name%>
			<%= cuisine.text_field :cuisine_name%>
			<%= cuisine.submit %>
			<%end%>
<%end%>
		</div>
		<br />
		<table>
			<tr>
				<th style="text-align: center;color: #808080;"> Cuisine Name</th>
				<th style="text-align: center;color: #808080;"> &nbsp;Action</th>
			</tr>

			<% @cuisines.each do |cuisine|%>
			<tr>
				<td style="text-align: center;;color: #808080;"><%= cuisine.cuisine_name%></td>
				<td style="text-align: center;"><%= link_to 'Edit',{:action=>'new',:id=>cuisine.id },class: "btn-orange1"%>
				<%= link_to 'Delete',{:action=>'destroy',:id=>cuisine.id},class: "btn-orange1" %></td>
			</tr>
			<%end%>
		</table>
		<% end %>
	</body>

</html>
