<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<link rel="stylesheet" type="text/css" href="http://www.mysterytin.com/css/style.css" />
		<%= stylesheet_link_tag 'orders'%>

		<%= javascript_include_tag 'classie'%>
		<style>
			.listhead {
				border-bottom: 1px solid #ddd;
				margin-bottom: 1em;
				position: relative;
				text-align: left;
				font-size: 20px;
				padding-left: 14px;
			}
			.input-group {
				position: relative;
				display: table;
				border-collapse: separate;
			}
			.input-group-addon {
				border-color: #E5E5E5;
				background: #E5E5E5;
				min-width: 18px;
				padding: 6px 12px;
				font-size: 14px;
				font-weight: normal;
				line-height: 1;
				color: #555;
				text-align: center;
				background-color: #EEE;
				border: 1px solid #CCC;
				width: 1%;
				white-space: nowrap;
				vertical-align: middle;
				display: table-cell;
				border-right: 0;
			}
			.form-control {
				display: block;
				width: 100%;
				height: 20px;
				padding: 6px 12px;
				font-size: 14px;
				line-height: 1.428571429;
				color: #555555;
				vertical-align: middle;
				background-color: #ffffff;
				background-image: none;
				border-radius: 0;
				border: 1px solid #cccccc;
				-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				-webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
				transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
			}
			.form-group {
				margin-bottom: 15px;
				margin-left: 15px;
			}
			#hotel_user_email {
				cursor: not-allowed;
				background-color: #eeeeee;
			}
			.container_16 .grid_13 {
				width: 79.25%;
			}
			.top-resultbar {
				background-color: #EFEFEF;
				border: 1px solid #DDDDDD;
				height: 42px;
				margin: 4px 0 46px;
				padding: 0 10px;
				position: relative;
				width: 100%;
			}
			.tal {
				text-align: left;
			}
			p {
				padding: 0.5em 0;
				word-wrap: break-word;
				font-size: 1em;
			}
			.filter-mobile {
				display: none;
			}
			element.style {
				float: right;
				margin: 5px;
				width: 75px;
			}
			.grid-view {
				border: 1px solid #EEEEEE;
				float: left;
				margin: 0.4em 2% 0.4em 0;
				min-height: 160px;
				padding: 0.3em 1%;
				width: 25%;
				background-color: #EEEEEE;
			}
			tr.titem td {
				padding-top: 1.5em;
				color: #808080;
			}
			.ticon td a.ico {
				text-transform: uppercase;
			}
			tr.theading {

				font-size: 0.8em;
				font-weight: 100;
				color: #FF6216;
				width: 50%;
			}
		</style>
	</head>
	<script src="https://code.jquery.com/jquery-1.7.2.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			$(function() {
				$('#homenav').click(function() {
					$('div[id^=div]').hide();
					$('#div1').show();
				});
				$('#blognav').click(function() {
					$('div[id^=div]').hide();
					$('#div2').show();
				});

				$('#shopnav').click(function() {
					$('div[id^=div]').hide();
					$('#div3').show();
				});

				$('#downloadsnav').click(function() {
					$('div[id^=div]').hide();
					$('#div4').show();
				});

			});
		});
	</script>

	<body style="background-image: url('/assets/menu-free-background4.jpg')">
		<div style="position: absolute;float: right;padding-left: 40px;padding-top: 20px;width: 72%;margin-left: 90px;">
			<%= link_to "HOME |",{:controller=>'homepage',:action=>'index'},class: "menu_link"%>
			<%= link_to "CONTACT US |",{},class: "menu_link"%>
			<%= link_to "ABOUT US",{},class: "menu_link"%>
			<%= link_to "SIGN UP",{:controller=>'hotel_users',:action=>'signup'},class: "btn-orange2"%>
			<% if cookies[:uName].present?%>
			<div id='cssmenu' style="width: 100px;float:right;margin-right: -188px;top: -6px;">
				<ul>

					<li class=' has-sub'>
						<a href='#' style="font-size: 13px; color:#black;font: bolder;">&nbsp;<%= cookies[:uName]%></a>
						<ul>
							<li class=''>
								<%= link_to image_tag('Settings.png',:size=>'15x15',:alt=>'Logo')+'DASHBOARD',{:controller=>'orders',:action=>'userDashboard'},class:'logoutStyle'%>

							</li>
							<li class=''>
								<%= link_to image_tag('users1.jpg',:size=>'15x15',:alt=>'Logo')+'PROFILE',{:controller=>'orders',:action=>'userDashboard'},class:'logoutStyle'%>
							</li>
							<li class=''>
								<%= link_to image_tag('logout.png',:size=>'15x15',:alt=>'Logo')+'LOGOUT',{:controller=>'menus',:action=>'logout'},class:'logoutStyle'%>

							</li>
						</ul>
					</li>

				</ul>
			</div>
			<%end%>
		</div>

		<div class="container_head" >
			<div style="">
				<%= image_tag('logo3.png',:size=>'120x100',:alt=>'Logo')%>
			</div>
		</div>

		<% @hotelUser=HotelUser.find(cookies[:user_id2])%>
		<br />
		<br />
		<div style="background-color: #402D26;width: 70%;height: 15%;margin-left: 200px;text-align: center;">
			<br />
			<br />
			<p style="color: #FFFFFF;font-size: 30px;text-transform: uppercase;top:200px;">
				<%= @hotelUser.userName%>'s Profile
			</p>
		</div>
		<!-- Body image -->
		<div id="container" >

			<!-- Navigation -->
			<div id="sidebar" style="margin-left: 5px;">

				<div id="nav" style="position: absolute; top: -272px;">

					<ul style="background-color: #F4A506;">
						<li>
							<a href="#" id="homenav" style="color: #FFFFFF;font: bold;">PERSONAL INFO</a>
						</li>

						<li>
							<a href="#" id="blognav" style="color: #FFFFFF;font: bold;">ADDRESSES</a>
						</li>
						<li>
							<a href="#" id="shopnav" style="color: #FFFFFF;font: bold;">ORDER HISTORY</a>
						</li>
						<li>
							<a href="#" id="downloadsnav" style="color: #FFFFFF;font: bold;">REFUND</a>
						</li>
						<li>
							<a href="#" id="helpnav" style="color: #FFFFFF;font: bold;">REVIEW</a>
						</li>
						<li>
							<a href="#" id="contactnav" style="color: #FFFFFF;font: bold;">FAVORITE</a>
						</li>
					</ul>

				</div>

				<div style="clear: both;"></div>

				<div style=" margin-top:-282px;margin-left:214px;background-color: #FFFFFF;width: 311%;height: 100%;">
					<div id="div1">
						<br />
						<h2 class="listhead"> Personal Info </h2>
						<div style="width: 70%;height: 80%;">

							<%= form_for(:hotelUser,:url=>{:controller=>'hotel_users',:action=>'editHotelUser'}) do |hotelUser|%>

							<div class="form-group">
								<label for="login_email">NAME:</label>
								<div class="input-group">
									<span class="input-group-addon"> <i class="fa fa-user"></i> </span>
									<%= hotelUser.text_field :userName,:class=>'form-control'%>
								</div>
							</div>

							<div class="form-group">
								<label for="login_email">USERNAME(EMAIL ID):</label>
								<div class="input-group txtDisabled">
									<span class="input-group-addon"> <i class="fa fa-user"></i> </span>
									<%= hotelUser.text_field :email,:class=>'form-control',:disabled=>'disabled'%>

								</div>
							</div>

							<div class="form-group">
								<label for="login_email">MOBILE:</label>
								<div class="input-group">
									<span class="input-group-addon"> <i class="fa fa-user"></i> </span>
									<%= hotelUser.text_field :phoneNo,:class=>'form-control'%>
								</div>
							</div>

							<div class="form-group">
								<label for="login_email">CITY:</label>
								<div class="input-group">
									<span class="input-group-addon"> <i class="fa fa-user"></i> </span>
									<%= hotelUser.text_field :city,:class=>'form-control'%>
								</div>
							</div>

							<div class="form-group">
								<label for="login_email">ADDRESS:</label>
								<div class="input-group">
									<span class="input-group-addon"> <i class="fa fa-user"></i> </span>
									<%= hotelUser.text_field :address1,class:'form-control'%>
								</div>
							</div>
							<br />
							<%= hotelUser.submit 'SAVE'%>
							<br />
							<br />
							<%end%>
						</div>
					</div>

					<div id="div2" style="display:none;">
						<div class="grid_13" style="padding: 0;width: 100%;background-color: #FFFFFF;">

							<div class="clear"></div>
							<div id="search_results_list">
								<div class="grid_4a" id="11242">
									<div class="search_results_list">

										<div id="#" class="search_result_row grid-view sorted-resto" style="opacity: 1;">
											<div class="grid_16 " style="background-color: #F9B004;height: 30px;padding-top: 10px;">

												<b style="color: #FFFFFF;padding-left: 12px;width: 60px;margin-top: 5px;">Address 1 </b>
												<b style="color: #FFFFFF;padding-left: 45px;width: 60px;"> <%= link_to image_tag 'edit.ico',:title=>'Edit'%>
												<%= link_to image_tag 'delete.ico',:size=>'16x16',:title=>'Delete'%> </b>
											</div>
											<%= @hotelUser.address2%>

										</div>

									</div>
								</div>
							</div>

						</div>
					</div>

					<div id="div3" style="display:none;">

						<div class="grid_13" style="padding: 0;width: 100%;background-color: #FFFFFF;">

							<br />
							<h2 class="listhead">Order History </h2>
							<table width="100%" cellpadding="2" id="user_orders" >
								<tbody>
									<tr class="theading" >
										<th style="color: #F4A506;font-size: 16px;">Delivery Date</th>
										<th style="color: #F4A506;font-size: 16px;">Order No.</th>
										<th style="color: #F4A506;font-size: 16px;">Hotel</th>
										<th style="color: #F4A506;font-size: 16px;">Status</th>
										<th style="color: #F4A506;font-size: 16px;width: 15px;">Total</th>
									</tr>

									<% @hotelUser=HotelUser.find( cookies[:user_id2]) %>
									<% @orderLast=Order.where(:email=>@hotelUser.email)%>
									<% @orderLast.each do |order|%>
									<tr class="titem">
										<td><%= order.updated_at.strftime('%e %B ,%Y' )%></td>
										<td><%= order.orderId%></td>
										<td><%= (Hotel.find(order.hotel_user_id)).hotel_Name%></td>
										<td><%= order.pay_type.present? ? 'SUCCESSFULL' : 'CANCELLED'%></td>
										<td><%= order.final_total.to_i%> </td>
									</tr>
									<tr class="ticon">

										<td colspan="5" style="text-align: left;color: #FF6216;font-size:14px;padding-top: 10px;"><%= link_to 'ORDER AGAIN',{:controller=>'menus',:action=>'index',:hotel_id=>order.hotel_user_id,:userAction=>'orderAgain',:cart_id=>order.cartId}%> </td>

									</tr>

									<%end%>
						</div>

						</td>
						</tr>

						</tbody></table>
					</div>
				</div>
			</div>

		</div>

	</body>

</html>
